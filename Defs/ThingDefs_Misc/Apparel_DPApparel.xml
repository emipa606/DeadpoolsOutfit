<Defs>
  <!-- ===============Bottom Layer============== -->
  <!--Deadpool Costume-->
  <!--Note: Feel free to remove the green texts that are besides the codes, they might cause errors if you use them-->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_DPool</defName>
    <label>Deadpool costume</label>
    <description>Outfit worn by the Merc with the mouth, known to break fourth walls and jump between worlds. Tuesday is Chimichanga day.</description>
    <graphicData>
      <texPath>Things/Apparel/DPool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <costStuffCount>110</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
      <li>ChickenCos_Clothing</li>
    </thingCategories>
    <statBases>
      <Mass>0.7</Mass>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>22000</WorkToMake>
      <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
      <ArmorRating_Heat>0.12</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>8</Insulation_Heat>
    </statBases>
    <generateCommonality>0.3</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Hands</li>
        <li>Arms</li>
        <li>Waist</li>
        <li>Legs</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/DPool</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Deadpool</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <equippedStatOffsets>
      <MoveSpeed>0.15</MoveSpeed>
      <MeleeHitChance>0.50</MeleeHitChance>
      <MeleeDodgeChance>0.75</MeleeDodgeChance>
      <MedicalTendQualityOffset>1</MedicalTendQualityOffset>
      <ImmunityGainSpeedFactor>1</ImmunityGainSpeedFactor>
      <SocialImpact>0.25</SocialImpact>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
      <ShootingAccuracyPawn>0.05</ShootingAccuracyPawn>
      <MentalBreakThreshold>-0.06</MentalBreakThreshold>
    </equippedStatOffsets>
  </ThingDef>
